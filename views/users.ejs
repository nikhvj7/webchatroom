<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.dev.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/users.css">

  </head>
  <body>
    <div class="container">
      <h1 class="display-3" id="chat_header">Chat</h1>

      <div id="chat" class="container">
        <div id="chatbox"></div>


        <div class="form-group" id="user_input">
          <input class="form-control" type="text" name="" value="" id="message">
          <input class="btn btn-primary" type="button" name="" value="send" id="mybutton">
        </div>
      </div>



    </div>

    <script type="text/javascript">
      var socket = io.connect('http://localhost:3000');

      var message = document.getElementById("message");
      var btn = document.getElementById('mybutton');
      var chatbox = document.getElementById('chatbox');

      btn.addEventListener('click', function(){

        socket.emit('chat', {
          message: message.value
        });
      });

      socket.on('chat', function(data){
        console.log("Got Socket request");
        chatbox.innerHTML += '<p><strong>Nikhil:</strong>' + data.message +'</p>';
      });

    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

  </body>
</html>
